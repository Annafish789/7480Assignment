<div class="card-group">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <%= pages.name %>
      </h5>
      <div class="row ">
        <div class="col-4">
            <img class="card-img-top" src="<%= pages.imageurl %>" alt="Card image cap">
        </div>
        <div class="col-8">
          <div class="card " style="width: 42rem;">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                  <%= pages.fulldes %>
              </li>
              <li class="list-group-item"><strong>Organizer:</strong><%= pages.orgainzer %></li>
              <li class="list-group-item"><strong>Date:</strong><%= pages.eventdate %></li>
              <li class="list-group-item"><strong>Time:</strong><%= pages.time %></li>
              <li class="list-group-item"><strong>Venue:</strong><%= pages.venue %></li>
              <li class="list-group-item"><strong>Quato:</strong><%= pages.quato %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>



