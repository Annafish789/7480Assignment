<form action="/Event/create" method="POST">
    <div class="row ">
        <div class="col-6">
            <div class="form-group">
                <label>Event Name:</label>
                <input type="text" class="form-control" name="Event[name]" id="InputEventName"placeholder="Enter Event Name"required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Short Description:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Enter Short Description"name="Event[shortdes]" rows="8"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Full Description:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Enter Full Description" name="Event[fulldes]" rows="8"></textarea>
            </div>
        </div>
        <div class="col-6">

            <div class="form-group">
                <label for="InputImageURL">Image URL:</label>
                <input type="text" class="form-control" id="InputImageURL" placeholder="Enter Image URL" name="Event[imageurl]">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Orgainzer:</label>
                <select class="form-control" id="exampleFormControlOrgainzer" name="Event[orgainzer]">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="InputEventDate">Event Date:</label>
                <input type="text" class="datepicker form-control" id="InputEventDate" placeholder="Select" name="Event[eventdate]"/>
            </div>
            <div class="form-group">
                <label for="InputTime">Time:</label>
                <input type="text" class="form-control timepicker" id="InputTime" placeholder="Select" name="Event[time]">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Venue:</label>
                <select class="form-control" id="exampleFormControlVenue" name="Event[venue]">
                    <option>WLB 108</option>
                    <option>OEE 1018</option>
                    <option>ABC 306</option>
                    <option>WLB 204</option>
                    <option>OEE 1016</option>
                </select>
            </div>
            <form class="form-inline">
                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Quato:</label>
                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="Event[quato]">
                    <option selected>choose:</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>

                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="customControlInline" name="Event[highlighted]">
                    <label class="custom-control-label" for="customControlInline">Highlighted Event</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary my-1">Submit</button>
                </div>
            </form>

        </div>
    </div>
</form>